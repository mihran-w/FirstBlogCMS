@model IEnumerable<DataLayer.Models.ProjectGallery>

<style>
    .disabled {
        pointer-events: none;
        opacity: 0.6;
    }
</style>

<!--Page Title-->
<section class="page-title">
    <div class="pattern-layer-one" style="background-image: url(/Content/images/background/pattern-16.png)"></div>
    <div class="auto-container">
        <h2>پروژه ها </h2>
        <ul class="page-breadcrumb">
            <li><a href="/">صفحه اصلی </a></li>
            <li>پروژه ها </li>
        </ul>
    </div>
</section>
<!--End Page Title-->


<div class="sec-title centered mt-5">
    <h2> پروژه های اخیر ما</h2>
</div>


<div class="container">
    <div class="row clearfix">
        @foreach (var item in Model)
        {
            <!-- Case Block -->
            <div class="case-block col-lg-4 col-md-6 col-sm-12">
                <div class="inner-box">
                    <div class="image">
                        <img src="~/Images/ProjectGallery/@item.ImageName" alt="@item.Title" />
                        <div class="overlay-box">
                            <a href="~/Images/ProjectGallery/@item.ImageName" data-fancybox="gallery" data-caption="" class="search-icon"><span class="icon flaticon-search"></span></a>
                            <div class="content">
                                <h4><a href="/ShowGallery/@item.pGalleryId"> @item.Title </a></h4>
                                <p>@item.ShortDes</p>
                            </div>
                            <a href="/ShowGallery/@item.pGalleryId" class="arrow flaticon-long-arrow-pointing-to-the-right"></a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>


<!-- Post Share Options -->
<div class="styled-pagination text-center">
    <ul class="clearfix">

        <li class="prev @(((int)ViewBag.CurrentGallery == 1)?"disabled":" " )"><a href="/Gallery/@(ViewBag.CurrentGallery - 1)"><span class="fa fa-angle-left"></span> </a></li>
        @for (int i = 1; i < ViewBag.CountGallery + 1; i++)
        {
            <li class="@(((int)ViewBag.CurrentGallery == i)?"active":" ")"><a href="/Gallery/@i">@i</a></li>
        }

        <li class="next @(((int)ViewBag.CurrentGallery >= ViewBag.CountGallery) ? "disabled" : " " )"><a href="/Gallery/@(ViewBag.CurrentGallery + 1)"><span class="fa fa-angle-right"></span> </a></li>

    </ul>
</div>




