@model DataLayer.Models.ProjectGallery
@using MyBlogCMS.Utilities
@{
    ViewBag.Title = "جزئیات پروژه";
}


    <style>
        .disabled {
            pointer-events: none;
            opacity: 0.6;
        }
    </style>

<!--Page Title-->
<section class="page-title">
    <div class="pattern-layer-one" style="background-image: url(/Content/images/background/pattern-16.png)"></div>
    <div class="auto-container">
        <h2>جزئیات پروژه</h2>
        <ul class="page-breadcrumb">
            <li><a href="/">صفحه اصلی </a></li>
            <li>جزئیات پروژه</li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<!-- جزئیات پروژه Section -->
<section class="project-detail-section">
    <div class="auto-container">

        <div class="upper-section">
            <div class="row clearfix">

                <!-- Image Column -->
                <div class="image-column col-lg-8 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <!-- Sec Title -->
                        <div class="sec-title">
                            <h2>@Model.Title</h2>
                        </div>
                        <div class="image">
                            <img src="~/Images/ProjectGallery/@Model.ImageName" alt="@Model.Title" style="width:770px; height:480px;" />
                        </div>
                    </div>
                </div>

                <!-- Info Column -->
                <div class="info-column col-lg-4 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <h4>اطلاعات پروژه </h4>
                        <div class="text"> @Model.ShortDes </div>
                        <ul class="info-list">
                            <li><span class="icon flaticon-user"></span><strong>مشتری:  </strong> @Model.Customer </li>
                            @*<li><span class="icon fa fa-bookmark-o"></span><strong>دسته:  </strong>شرکتی / فروشگاهی</li>*@
                            <li><span class="icon flaticon-timetable"></span><strong>تاریخ:  </strong> @Model.CreateDate.ConvertToShamsi() </li>
                            <li><span class="icon fa fa-globe"></span><strong>وب سایت:  </strong> @Model.Website </li>
                            <li><span class="icon fa fa-map-marker"></span><strong>موقعیت:  </strong> @Model.Location </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div class="lower-section">

            @Html.Raw(Model.Text)

            <div class="buttons-box clearfix">
                <div class="pull-left">

                    <a href="/ShowGallery/@(Model.pGalleryId - 1)" class="theme-btn btn-style-three @((ViewBag.CurrentGallery <= 6)?"disabled":" " )"><span class="txt"><i class="fa fa-angle-double-left"></i>&nbsp; قبلی </span></a>

                </div>
                <div class="pull-right">
                    <a href="#" class="theme-btn btn-style-three"><span class="txt">ارسال پیام &nbsp;<i class="fa fa-angle-double-right"></i></span></a>
                </div>
            </div>
        </div>



    </div>
</section>